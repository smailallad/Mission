{% extends "base.html.twig" %}
{% block title %}Liste pointages - {{ parent() }}{% endblock %}

{% macro thead(name, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('pointage_sort', {field: field, type: 'ASC'}) }}">{{ label }} <i class="glyphicon glyphicon-sort-by-attributes-alt"></i></a>
            {% elseif sort.type == 'ASC' %}
                <a href="{{ path('pointage_sort', {field: field, type: 'DESC'}) }}">{{ label }} <i class="glyphicon glyphicon-sort-by-attributes"></i></a>
            {% endif %}
        {% else %}
            <a href="{{ path('pointage_sort', {field: field, type: 'ASC'}) }}">{{ label }} <i class="glyphicon glyphicon-sort"></i></a>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% from _self import thead %}

{% block bodyliste %}
    <div class="col-md-2">
    {% include '@App/PointageUser/filter.html.twig' with {form: form} %}
    </div>
    <div class="col-md-10">
    {#{% include "@App/messages.html.twig" %}#}
    <h4>Pointages</h4>
    {{ knp_pagination_render(paginator) }}
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col">{{ thead('pointage', 'date', 'Date') }}</th>
                <th scope="col">{{ thead('pointage', 'user.nom', 'Nom') }}</th>
                <th scope="col">{{ thead('pointage','pointage.designation','DÃ©signation')}}</th>
                <th class= "text-center">Heures de route</th>
                <th class= "text-center">Heures de travail</th>
                <th class= "text-center">Heures de supp</th>
                <th class= "text-center">Obs</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for pointage in paginator %}
                <tr>
                    <td>{{ pointage.date | date('d/m/Y') }}</td>
                    <td>{{ pointage.user.nom }}</td>
                    <td>{{ pointage.pointage.designation }}</td>
                    <td class= "text-center">{{ pointage.hRoute }}</td>
                    <td class= "text-center">{{ pointage.hTravail }}</td>
                    <td class= "text-center">{{ pointage.hSup }}</td>
                    <td class= "text-center">{{ pointage.obs }}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('pointage_show', {id: pointage.id | Mycrypt}) }}">
                                <i class="glyphicon glyphicon-file"></i>voir
                            </a>
                            <a class="btn btn-default btn-sm" href="{{ path('pointage_edit', {id: pointage.id | Mycrypt}) }}">
                                <i class="glyphicon glyphicon-edit"></i>modifier
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(paginator) }}

    <ul class="new_entry list-unstyled">
        <li>
            <a class="btn btn-info" href="{{ path('pointage_new') }}">
                <i class="glyphicon glyphicon-plus"></i>Nouveau
            </a>
        </li>
    </ul>
</div>
{% endblock %}
