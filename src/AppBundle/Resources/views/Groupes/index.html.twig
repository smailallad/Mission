{% extends "base.html.twig" %}
{% block title %}Liste Groupes - {{ parent() }}{% endblock %}
{% block bodysaisie %}

    <h4>Liste Groupes</h4>
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom du Groupe</th>
                <th scope="col">Roles</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for groupes in entities %}
                <tr>
                    <td><a href="{{ path('admin_groups_show', {id: groupes.id | Mycrypt}) }}">{{ groupes.id }}</a></td>
                    <td>{{ groupes.groupname }}</td>
                    <td>{{ groupes.roles|join(', ') }}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('admin_groups_show', {id: groupes.id | Mycrypt}) }}">
                                <i class="glyphicon glyphicon-file-o"></i> voir
                            </a>
                            <a class="btn btn-default btn-sm" href="{{ path('admin_groups_edit', {id: groupes.id | Mycrypt}) }}">
                                <i class="glyphicon glyphicon-edit"></i> Modifier
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul class="new_entry list-unstyled">
        <li>
            <a class="btn btn-info" href="{{ path('admin_groups_new') }}">
                <i class="glyphicon glyphicon-plus"></i> Nouveau
            </a>
        </li>
    </ul>

{% endblock %}
