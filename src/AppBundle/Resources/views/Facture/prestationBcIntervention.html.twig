{% extends "base.html.twig" %}
{% block title %}
    Liste prestations - 
        
    {{ parent() }}
{% endblock %}

{% macro thead(name, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('prestation_sort', {field: field, type: 'ASC'}) }}">
                    {{ label }}
                    <i class="glyphicon glyphicon-sort-by-attributes-alt"></i>
                </a>
            {% elseif sort.type == 'ASC' %}
                <a href="{{ path('prestation_sort', {field: field, type: 'DESC'}) }}">
                    {{ label }}
                    <i class="glyphicon glyphicon-sort-by-attributes"></i>
                </a>
            {% endif %}
        {% else %}
            <a href="{{ path('prestation_sort', {field: field, type: 'ASC'}) }}">
                {{ label }}
                <i class="glyphicon glyphicon-sort"></i>
            </a>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% from _self import thead %}

{% block bodyliste %}
    <div class="col-md-2">{#{% include '@App/Prestation/filter.html.twig' with {form: form} %}#}
    </div>
    <div class="col-md-10">
        <h4>
            Liste Prestations - ({{ prestations | length }})                    
        </h4>
        <table class="table table-striped table-hover table-bordered records_list">
            <tbody>
                {% for prestation in prestations %}
                    <tr>
                        <td>{{ prestation.bc.num }}</td>
                        <td> <a href="">{{ prestation.prestation.nom }}</td>
                        <td>{{ prestation.zone.nom }}</td>
                        <td>{% if prestation.site != null %}
                                {{ prestation.site.nom }}
                            {% endif %}
                        </td>
                        <td class="text-right">{{ prestation.quantite }}</td>
                        <td class="text-right">{{ prestation.montant | number_format(0, ' ', ' ') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <p>
            <a class = "btn btn-primary" href="{{ path('facture_show', {id: facture| Mycrypt}) }}">Retour</a>
        </p>        
    </div>
    {% endblock %}
    {% block js %}{% endblock %}
    