{% if ('M' in mission.code ) %}
{% set m = 'mission' %}
{% else %}
{% set m = 'noteFrais' %}
{% endif %}
{% set appel_employe = app.session.get('appel_employe') %}
{% set appel_journal = app.session.get('appel_journal') %}
{% extends "base.html.twig" %}
{% block title %}Mission - {{ parent() }}{% endblock %}
{% block detail %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h4> 
            {% if appel_journal == 'non' %}
                {% if appel_employe == 'non' %}
                    {% if m == 'mission' %}
                        <a class="btn btn-primary mr-2" href="{{ path('mission_index') }}">
                            <i class="glyphicon glyphicon-list"></i>
                        </a>
                        Mission
                        {% if (appel_journal == 'non') and (appel_employe == 'non') and (is_granted('ROLE_COMPTABLE') and
                        (mission.vComptabilite)) %}
                            <a class="ml-5" href="{{ path('excel_mission',{id: mission.id | Mycrypt}) }}"><img
                                src="{{ asset('icones/Excel-icon.png') }}" title="Exporter vers excel."></a>
                        {% endif %}
                    {% else %}
                        <a class="btn btn-primary mr-2" href="{{ path('note_frais_index') }}">
                            <i class="glyphicon glyphicon-list"></i>
                        </a>
                        N.Frais            
                        {% if is_granted('ROLE_COMPTABLE') %}
                            <a class="ml-5" href="{{ path('excel_note_frais',{id: mission.id | Mycrypt}) }}"  ><img src="{{ asset('icones/Excel-icon.png') }}" title="Exporter vers excel."></a>
                        {% endif %}
                    {% endif %}
                {% else %}
                    {% if m == 'mission' %}
                        <a class="btn btn-primary mr-2" href="{{ path('mission_employe_index') }}">
                            <i class="glyphicon glyphicon-list"></i>
                        </a>
                        Mission
                    {% else %}
                        <a class="btn btn-primary mr-2" href="{{ path('note_frais_employe_index') }}">
                            <i class="glyphicon glyphicon-list"></i>
                        </a>
                        Note de frais
                    {% endif %}
                {% endif %}
            {% else %}
                <a class="btn btn-primary mr-2" href="{{ path('journal') }}">
                    <i class="glyphicon glyphicon-list"></i>
                </a>
            {% endif %}

        </h4>
    </div>
    <div class="panel-body">
        {% include "@App/Mission/mission.detail.html.twig" %}
    </div>
</div>
{% endblock %}

{% block contenu %}
{#{% include "@App/messages.html.twig" %}#}
{% include "@App/Mission/mission.pages.html.twig" %}
<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped table-hover records_list">
            <thead>
                <tr>
                    <th>
                        {% if ((appel_employe == "non") and (
                        (is_granted("ROLE_SUPER_COMPTABLE")) or
                        (is_granted("ROLE_COMPTABLE") and (not mission.vComptabilite)) or
                        (not mission.vComptabilite and not mission.vRollout and not mission.vEmploye))) or
                        ((appel_employe == "oui") and ( not mission.vEmploye))
                        %}
                        <button class="btn btn-primary" data-toggle="modal" data-target="#modalAddCarburant"
                            data-id="{{ mission.id }}">
                            <i class="glyphicon glyphicon-plus"></i>
                        </button>
                        {% endif %}
                    </th>
                    <th scope="col">Date</th>
                    <th scope="col">Vehicule</th>
                    <th scope="col">Désignation</th>
                    <th scope="col">Justification</th>
                    <th scope="col" class="text-right">Montant</th>
                    <th scope="col" class="text-right">Kms</th>
                    <th scope="col">Obs</th>
                </tr>
            </thead>
            <tbody>
                {% for carburant in carburants %}
                <tr>
                    <td>
                        {% if ((appel_employe == "non") and (
                        (is_granted("ROLE_SUPER_COMPTABLE")) or
                        (is_granted("ROLE_COMPTABLE") and (not mission.vComptabilite)) or
                        (not mission.vComptabilite and not mission.vRollout and not mission.vEmploye))) or
                        ((appel_employe == "oui") and ( not mission.vEmploye))
                        %}
                        <button class="btn btn-danger" data-toggle="modal" data-target="#modalDeleteCarburant"
                            data-id="{{ carburant.id }}">
                            <i class="glyphicon glyphicon-trash"></i>
                        </button>
                        {% endif %}
                    </td>
                    <td>{{ carburant.date | date('d/m/Y') }}</td>
                    <td>{{ carburant.vehicule.nom }}</td>
                    <td>
                        {% if ((appel_employe == "non") and (
                        (is_granted("ROLE_SUPER_COMPTABLE")) or
                        (is_granted("ROLE_COMPTABLE") and (not mission.vComptabilite)) or
                        (not mission.vComptabilite and not mission.vRollout and not mission.vEmploye))) or
                        ((appel_employe == "oui") and ( not mission.vEmploye))
                        %}
                        <a href="{{ path('mission_carburant_edit', {id: carburant.id | Mycrypt}) }}">
                            {{carburant.carburant.nom }}
                        </a>
                        {% else %}
                        {{carburant.carburant.nom }}
                        {% endif %}
                    </td>
                    <td>{{ carburant.justificationDepense.nom }} </td>
                    <td class="text-right">{{ carburant.montant | number_format(2,',',' ')}}</td>
                    <td class="text-right">{{ carburant.kms | number_format(0,',',' ')}}</td>
                    <td>{{ carburant.obs }}</td>

                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<!-- Modale add Carburant-->
<div id="modalAddCarburant" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalAddCarburantLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4>Ajouter depense carburant :</h4>
            </div>
            <div class="modal-body">
                {{ form_start(formCarburant) }}
                {{ form_widget(formCarburant) }}
                <p>
                    <button class="btn btn-primary" type="submit">Valider</button>
                </p>
                {{ form_end(formCarburant) }}
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-dismiss="modal">Non</button>
            </div>
        </div>
    </div>
</div>

<!-- Modale delete Carburant-->
<div id="modalDeleteCarburant" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalDeleteCarburantLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4>Confirmer la suppression</h4>
            </div>
            <div class="modal-body">
                <p>Vous êtes sur le point de supprimer cet élément, cette procédure est irréversible.</p>
                <p>Voulez-vous poursuivre?</p>
            </div>
            <div class="modal-footer">
                <form name="form" id="modalDeleteCarburantForm" action="#" method="post">
                    <button class="btn btn-danger" type="submit"><i class="glyphicon glyphicon-trash"></i>
                        Supprimer</button>
                    <button class="btn btn-primary" data-dismiss="modal">Non</button>
                </form>
            </div>
        </div>
    </div>
</div>


{% endblock %}
{% block js %}
<script>
    $(document).ready(function () {
        $('#modalDeleteCarburant').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var id = button.data('id') // Extract info from data-* attributes
            var cURL = Routing.generate('mission_carburant_delete', { id: id });
            //alert(cURL);
            $("#modalDeleteCarburantForm").attr('action', cURL);
        })


    })
</script>
{% endblock %}