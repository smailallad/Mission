{% block js %}
<script>
    $(document).ready(function () {
        $('#btnvemploye').click(function () {
            var id = $("#modalve").data("id");
            var cURL = Routing.generate('mission_validation_employe', { id: id });
            $.post(
                cURL,
                function (data) {
                    location.reload(true);
                }
            )
            
        })

        $('#btnvrollout').click(function () {
