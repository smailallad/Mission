        //    alert(cURL);
        listesites(cURL);
        //alert("previoussite");
    }
    function nextsite() {
        var pagenum = $('#nextsite').attr('data-pagenum');
        var totalpages = $('#nextsite').attr('data-totalpages');
        pagenum++;
        pagenum = Math.min(totalpages, pagenum);
        var client = $('#site_recherche_client').val();
        var site = $('#site_recherche_nom').val();
        if (site.length == 0) {
            var cURL = Routing.generate('search_site', { client: client, pagenum: pagenum });
        } else {
            var cURL = Routing.generate('search_site', { client: client, pagenum: pagenum, site: site });
