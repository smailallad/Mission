        </div>
    </div>
</div>

{% endblock %}
{% block js %}
<script>
    $(document).ready(function () {
        //************* Site **************
        $('#listeSite').click(function (e) {
            e.preventDefault();
        });
        $('#chercherSite').click(function (e) {
            e.preventDefault();
            var client = $('#site_recherche_client').val();
            var site = $('#site_recherche_nom').val();
            if (site.length == 0) {
                var cURL = Routing.generate('search_site', { client: client, pagenum: 0 });
            } else {
                var cURL = Routing.generate('search_site', { client: client, pagenum: 0, site: site });
            }
            listesites(cURL);
        });
        $('#modalSite').on('shown.bs.modal', function (e) {
            var client = $('#site_recherche_client').val();
            var site = $('#site_recherche_nom').val();
            if (site.length == 0) {
                var cURL = Routing.generate('search_site', { client: client, pagenum: 0 });
            } else {
                var cURL = Routing.generate('search_site', { client: client, pagenum: 0, site: site });
            }
            listesites(cURL);
            //alert(cURL);
        });
        //************ Prestation **************
        $('#listePrestation').click(function (e) {
            e.preventDefault();
        });
        $('#chercherPrestation').click(function (e) {
            e.preventDefault();
            var projet = $('#prestation_filter_projet').val();
            var prestation = $('#prestation_filter_nom').val();
            if (prestation.length == 0) {
                var cURL = Routing.generate('search_prestation', { projet: projet, pagenum: 0 });
            } else {
                var cURL = Routing.generate('search_prestation', { projet: projet, pagenum: 0, prestation: prestation });
            }
            listeprestations(cURL);
        });
        $('#modalPrestation').on('shown.bs.modal', function (e) {
            e.preventDefault();
            var projet = $('#prestation_filter_projet').val();
            var prestation = $('#prestation_filter_nom').val();
            if (prestation.length == 0) {
                var cURL = Routing.generate('search_prestation', { projet: projet, pagenum: 0 });
            } else {
                var cURL = Routing.generate('search_prestation', { projet: projet, pagenum: 0, prestation: prestation });
            }
            listeprestations(cURL);
        });


    })

    function listesites(cURL) { 
        $.post(
            cURL,
            function (data) {
                $('#listeSiteTable tbody > tr').remove();
                ligne = '';
                //console.log(data);
                if (data.pagenum != 0) {
                    ligne += '<button id="firstsite" data-pagenum="' + data.pagenum + '" data-totalpages="' + data.totalpages + '" onclick="firstsite()" class="ml-2 btn btn-primary glyphicon glyphicon-fast-backward">  </button>';
                }
                if (data.pagenum > 0) {
                    ligne += '<button id="previoussitesite" data-pagenum="' + data.pagenum + '" data-totalpages="' + data.totalpages + '" onclick="previoussitesite()" class="ml-2 btn btn-primary glyphicon glyphicon-backward">  </button>';
                }
                if (data.pagenum < data.totalpages) {
                    ligne += '<button id="nextsite" data-pagenum="' + data.pagenum + '" data-totalpages="' + data.totalpages + '" onclick="nextsite()" class="ml-2 btn btn-primary glyphicon glyphicon-forward">  </button>';
                }
                if (data.pagenum < data.totalpages) {
                    ligne += '<button id="lastsite" data-pagenum="' + data.pagenum + '" data-totalpages="' + data.totalpages + '" onclick="lastsite()" class="ml-2 btn btn-primary glyphicon glyphicon-fast-forward">  </button>';
                }
                ligne += '<span id="pages" class="badge bg-primary ml-4 pt-3 pb-3">';
                var tt = parseInt(data.pagenum) + 1;
                ligne += tt;
                ligne += '/';
                ligne += data.totalpages + 1;
                //ligne += data.totalrows;
                ligne += '</span>';
                $('#btnNavigationSite').html(ligne);
                for (i = 0; i < data.sites.length; i++) {
                    ligne = '';
                    ligne += '<tr>';
                    //ligne += '<td>';
                    //ligne += "<button id='selectsite' onclick='selectsite(\"" + data.sites[i].id + "\",\"" + data.sites[i].code + "\",\"" + data.sites[i].nom + "\")' class='ml-2 btn btn-primary glyphicon glyphicon-ok'>  </button> " + data.sites[i].code;
                    //ligne += '</td>';
                    ligne += '<td>';
                    ligne += "<a href='#' onclick='selectsite(\"" + data.sites[i].id + "\",\"" + data.sites[i].code + "\",\"" + data.sites[i].nom + "\"); return false;'>";
                    ligne += data.sites[i].code;
                    ligne += '</a></td>';
                    ligne += '<td>';
                    ligne += data.sites[i].nom;
                    ligne += '</td>';
                    ligne += '<td>';
                    ligne += data.sites[i].client;
                    ligne += '</td>';
                    ligne += ' </tr>';
                    $('#listeSiteTable > tbody:last').append(ligne);
                }
            }
        )
    }

    function firstsite() {
        pagenum = 0;
        var client = $('#site_recherche_client').val();
        var site = $('#site_recherche_nom').val();
        if (site.length == 0) {
            var cURL = Routing.generate('search_site', { client: client, pagenum: pagenum });
        } else {
            var cURL = Routing.generate('search_site', { client: client, pagenum: pagenum, site: site });
        }
        //    alert(cURL);
        listesites(cURL);
    }
    function previoussitesite() {
        var pagenum = $('#previoussitesite').attr('data-pagenum');
        var totalpages = $('#previoussitesite').attr('data-totalpages');
        pagenum--;
        pagenum = Math.max(0, pagenum);
        var client = $('#site_recherche_client').val();
