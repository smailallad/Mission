{% extends "base.html.twig" %}
{% block title %}Famille depense - {{ parent() }}{% endblock %}
{% block bodysaisie %}
{#{% include "@App/messages.html.twig" %}#}
<div class="panel panel-default">
    <div class="panel-heading">
        <h4> Fonction </h4>
    </div>
    <div class="panel-body">
        <table class="table table-hover record_properties">
            <tbody>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ familleDepense.nom }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <div class="btn-group record_actions">
            <a class="btn btn-primary" href="{{ path('familleDepense') }}">
                <i class="glyphicon glyphicon-list"></i> Retour à la liste
            </a>
            <a class="btn btn-primary" href="{{ path('familleDepense_edit', {id: familleDepense.id | Mycrypt}) }}">
                <i class="glyphicon glyphicon-edit"></i>Modifier
            </a>
            <button class="btn btn-danger" data-toggle="modal" data-target="#modalDeleteFonction"><i class="glyphicon glyphicon-trash"></i> Supprimer</button>
        </div>
    </div>
</div>

<!-- Modale delete Fonction-->
   <div id="modalDeleteFonction" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="AjoutRoleLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4>Confirmer la suppression</h4>
                </div>
                <div class="modal-body">
                    <p>Vous êtes sur le point de supprimer cette Fonction, cette procédure est irréversible.</p>
                    <p>Voulez-vous poursuivre?</p>
                </div>
                <div class="modal-footer">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}
                        <button class="btn btn-danger" type="submit"><i class="glyphicon glyphicon-trash-o"></i> Oui</button>
                        <button class="btn btn-primary" data-dismiss="modal">Non</button>
                        <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}
