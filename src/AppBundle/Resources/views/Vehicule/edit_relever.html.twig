{% extends "base.html.twig" %}
{% form_theme edit_form 'Form/bootstrap_3_layout.html.twig' %}
{% block title %}Modification - Vehicule{% endblock %}
{% block bodysaisie %}
{#{% include "@App/messages.html.twig" %}#}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3> Relever - Vehicule </h3>
        <table class="table table-hover record_properties">
            <tbody>
                <tr>
                    <th scope="row">Vehicule</th>
                    <td>{{ vehicule.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Matricule</th>
                    <td>{{ vehicule.matricule }}</td>
                </tr>
                <tr>
                    <th scope="row">Marque</th>
                    <td>{{ vehicule.marque.nom }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="panel-body">
        
    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
       <p>
          <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-edit"></i> Modifier</button>
       </p>
    {{ form_end(edit_form) }}
    </div>
    <div class="panel-footer">
        <div class="btn-group record_actions">
            <a class="btn btn-info" href="{{ path('vehicule_index') }}">
                <i class="glyphicon glyphicon-list"></i> Retour
            </a>
        </div>
    </div>
</div>

{% endblock %}
