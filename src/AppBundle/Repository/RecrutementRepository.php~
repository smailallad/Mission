class RecrutementRepository extends \Doctrine\ORM\EntityRepository
{
    public function recrutementSuivant($d)
    {
        $em = $this->getEntityManager();
        $qb = $em->createQueryBuilder();

        $q = $this->createQueryBuilder('r')
          ->where('r.recruter > :d')
          ->setParameter('d', $d)
          ->getQuery();

        return $q->getResult();
    }

